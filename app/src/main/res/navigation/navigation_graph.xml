<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/detailAppointmentFragment">



    <fragment
        android:id="@+id/editAppointmentFragment"
        android:name="com.example.miniproyecto_i.view.fragment.EditAppointmentFragment"
        android:label="EditAppointmentFragment"
        tools:layout="@layout/fragment_edit_appointment">
        <action
            android:id="@+id/action_appointmentEditFragment_to_appointmentDetailsFragment"
            app:destination="@id/detailAppointmentFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailAppointmentFragment"
        android:name="com.example.miniproyecto_i.view.fragment.DetailAppointmentFragment"
        android:label="detailAppointmentFragment"
        tools:layout="@layout/fragment_detail_appointment">
        <action
            android:id="@+id/action_itemDetailsFragment_to_itemEditFragment"
            app:destination="@id/editAppointmentFragment" />
        <action
            android:id="@+id/action_itemDetailsFragment_to_itemAddFragment"
            app:destination="@id/addAppointmentFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeAppointments"
        android:name="com.example.miniproyecto_i.view.fragment.HomeAppointments"
        android:label="HomeAppointments" >
        <action
            android:id="@+id/action_homeAppointments_to_detailAppointmentFragment"
            app:destination="@id/detailAppointmentFragment" />
        <action
            android:id="@+id/action_homeAppointments_to_addAppointmentFragment"
            app:destination="@id/addAppointmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAppointmentFragment"
        android:name="com.example.miniproyecto_i.view.fragment.AddAppointmentFragment"
        android:label="AddAppointmentFragment" >
        <action
            android:id="@+id/action_addAppointmentFragment_to_homeAppointments"
            app:destination="@id/homeAppointments" />
    </fragment>

</navigation>
